def almostIncreasingSequence(sequence):
    
    

    for idx, each in enumerate(sequence):
        idx == 1
        reduceValue = sequence[idx-1] - sequence[idx]
        print(reduceValue)
        
        if reduceValue < 0 :
            sequence.remove(sequence[idx])
            
        print(sequence)

    print(reduceValue)
    
    for idx, each in enumerate(sequence):
        idx == 1
        reduceValue = sequence[idx-1] - sequence[idx]
        print(reduceValue)

    if reduceValue > 0 :
        
       return True
       
    else :
        return False   
        
    return 
